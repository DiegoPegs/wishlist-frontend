      "command": "./scripts/start-mcp.sh",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Chrome with Debug",
      "type": "shell",
      "command": "google-chrome --remote-debugging-port=9222 --no-first-run --no-default-browser-check",
